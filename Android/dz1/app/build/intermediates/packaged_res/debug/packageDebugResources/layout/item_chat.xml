<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="76dp"
    android:background="?android:attr/selectableItemBackground"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <FrameLayout
        android:id="@+id/avatarContainer"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_avatar_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_placeholder"
            android:visibility="visible"
            android:clipToOutline="true" />

        <TextView
            android:id="@+id/txtInitials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="CA"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/tg_text_primary"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:35"
        android:textSize="12sp"
        android:textColor="@color/tg_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/avatarContainer" />

    <TextView
        android:id="@+id/txtCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✓✓"
        android:textSize="14sp"
        android:textColor="@color/tg_accent"
        android:visibility="gone"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toStartOf="@id/txtTime"
        app:layout_constraintBaseline_toBaselineOf="@id/txtTime" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Chat name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/tg_text_primary"
        app:layout_constraintStart_toEndOf="@id/avatarContainer"
        app:layout_constraintEnd_toStartOf="@id/txtCheck"
        app:layout_constraintTop_toTopOf="@id/avatarContainer" />

    <TextView
        android:id="@+id/unreadBadge"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:minWidth="20dp"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:gravity="center"
        android:text="3"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/tg_badge_text"
        android:background="@drawable/bg_unread_badge"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/avatarContainer" />

    <TextView
        android:id="@+id/txtLastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Last message"
        android:textSize="14sp"
        android:textColor="@color/tg_text_secondary"
        app:layout_constraintStart_toEndOf="@id/avatarContainer"
        app:layout_constraintEnd_toStartOf="@id/unreadBadge"
        app:layout_constraintTop_toBottomOf="@id/txtName" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="64dp"
        android:background="@color/tg_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
